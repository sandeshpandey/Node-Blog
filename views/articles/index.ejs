<%- include('../partials/header') %>
<div class="container">
    <h1 class="mb-4">Blog Articles</h1>
    <a href="/articles/new" class="btn btn-success">New Article</a>

    <% articles.forEach (article => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%=article.title%></h2>
                <div class="card-subtitle text-muted mb-2">
                    <%=article.createdAt.toLocaleDateString() %>
                </div>
                <div class="card-text mb-2">
                    <%=article.description%>
                </div>
                <a href="/articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                <form class="d-inline" action="/articles/<%= article.slug %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    <% }) %>
    
</div>
<%- include('../partials/footer') %>